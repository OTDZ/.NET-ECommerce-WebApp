@model Category // Will initialize a new Category object with no values

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label asp-for="Name"  class="pd-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder"  class="pd-1"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="category" asp-action="index" class="btn btn-outline-secondary border form-control">
                    Back
                </a>
            </div>
        </div>

    </div>
</form>

<!--
    Client-side Validation
-->
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}